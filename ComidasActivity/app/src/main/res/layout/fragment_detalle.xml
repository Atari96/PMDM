<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundetalle">

    <TextView
        android:id="@+id/textViewId"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="id"
        android:layout_marginEnd="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/textViewCategoria"
        />
    <TextView
        android:id="@+id/textViewCategoria"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="categoria"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textViewId"
        app:layout_constraintEnd_toStartOf="@+id/textViewArea"
        android:layout_marginEnd="5dp"
        />

    <TextView
        android:id="@+id/textViewArea"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="Area"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textViewCategoria"
        android:layout_marginStart="5dp"
        />

    <TextView
        android:id="@+id/textViewDesc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="Descripcion"
        android:textSize="25dp"
        android:layout_marginEnd="50dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewArea"
        app:layout_constraintBottom_toTopOf="@+id/imageViewFoto"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        />

    <ImageView
        android:id="@+id/imageViewFoto"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="50dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewDesc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/textViewReceta"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="5"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="50dp"
        android:text="Receta"
        android:textSize="13dp"
        app:layout_constraintTop_toBottomOf="@+id/imageViewFoto"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />


    <TextView
        android:id="@+id/textViewIngr1"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Ingrediente1"
        android:textSize="12dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewReceta"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="NotSibling" />

    <TextView
        android:id="@+id/textViewIngr2"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:text="Ingrediente2"
        android:textSize="12dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewIngr1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/textViewIngr3"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:text="Ingrediente3"
        android:textSize="12dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewIngr2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/textViewIngr4"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:text="Ingrediente4"
        android:textSize="12dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewIngr3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/textViewIngr5"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:text="Ingrediente5"
        android:textSize="12dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewIngr4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/textViewCant1"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Cantidad 1"
        android:textSize="12dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewReceta"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/textViewIngr1"
        tools:ignore="NotSibling" />

    <TextView
        android:id="@+id/textViewCant2"
        android:layout_width="320dp"
        android:layout_height="wrap_content"


        android:text="Cantidad 2"
        android:textSize="12dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewCant1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/textViewIngr2"
        />

    <TextView
        android:id="@+id/textViewCant3"
        android:layout_width="320dp"
        android:layout_height="wrap_content"


        android:text="Cantidad 3"
        android:textSize="12dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewCant2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/textViewIngr3"
        />

    <TextView
        android:id="@+id/textViewCant4"
        android:layout_width="320dp"
        android:layout_height="wrap_content"


        android:text="Cantidad 4"
        android:textSize="12dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewCant3"
        app:layout_constraintBottom_toTopOf="@+id/textViewCant5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/textViewIngr4"
        />

    <TextView
        android:id="@+id/textViewCant5"
        android:layout_width="320dp"
        android:layout_height="wrap_content"

        android:text="Cantidad 5"
        android:textSize="12dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewCant4"
        app:layout_constraintStart_toEndOf="@id/textViewIngr5"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <Button
        android:id="@+id/buttonAtras"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="50dp"
        app:layout_constraintTop_toBottomOf="@id/textViewCant5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        android:text="Atras"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
